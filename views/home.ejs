
        <h1>Social Media/Home page</h1>


        <section id="feed-posts">
                <h4>Posts</h4>
             
                <form action="/posts/create" id="new-post-form" method="POST">
                  <textarea
                    name="content"
                    cols="30"
                    rows="3"
                    placeholder="Type Here..."
                    required
                  ></textarea>
                  <input type="submit" value="Post" />
                </form>
                <div id="posts-list-container">
                        <ul>
                          <% for(post of posts){ %> 
                                <%= post.content %>
                                <br>
                                <small>
                                    <%= post.user.name %>
                                </small>
                                
                                <%} %>
                        </ul>
                      </div>
              </section>
       